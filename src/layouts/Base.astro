---
import '../styles/global.css'
const { title = 'SpuntoAI', description = 'Libreria di prompt AI con WordPress headless e Astro' } = Astro.props
---
<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header class="border-b border-neutral-800 bg-neutral-950/70 sticky top-0 backdrop-blur z-50">
      <div class="container py-3 flex items-center justify-between">
        <a href="/" class="flex items-center gap-3">
          <img src="/favicon.svg" alt="SpuntoAI" class="w-8 h-8" />
          <span class="font-semibold tracking-wide">SpuntoAI</span>
        </a>
        <nav class="text-sm text-neutral-300">
          <a href="/" class="hover:text-white">Prompt</a>
        </nav>
      </div>
    </header>

    <main class="container py-8">
      <slot />
    </main>

    <footer class="border-t border-neutral-800">
      <div class="container py-6 text-sm text-neutral-400">
        Â© {new Date().getFullYear()} SpuntoAI. Tutti i diritti riservati.
      </div>
    </footer>
  </body>
</html>
